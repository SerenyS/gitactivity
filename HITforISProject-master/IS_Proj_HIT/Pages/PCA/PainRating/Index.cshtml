    ViewData["Title"] = "Index";
}

<h1>
    <a class="btn btn-primary" asp-controller="Administration" asp-action="DataEntry">
        <i class="fa fa-arrow-left "></i>
    </a>
    Index
</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PainRating[0].Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PainRating[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PainRating[0].LastModified)
