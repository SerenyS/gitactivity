                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PainParameter.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.PainRatingId">Edit</a> |
