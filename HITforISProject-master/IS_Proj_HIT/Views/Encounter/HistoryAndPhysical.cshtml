
@model ViewEncounterPageModel

@ViewBag.Message
@ViewBag.Patient


<partial name="PatientBannerPartial" model="Model" />

<form>
    <div class="container">
        <div class="row justify-content-start">

            <div class="container">
                <div class="card w-75">
                    <div class="card-header bg-primary text-white">
                        <h4>
                            History and Physical
                        </h4>
                    </div>
                    <div class="card-body bg-light">
                        <div class="container">
                            Date: <input value="@DateTime.Today.ToString("d")" />
                            <br />
                            Chief Complaint: <input type="text" placeholder="free text" />

                        </div>
                        <br />
                        <div class="container">
                            <a role="button" class="btn btn-primary btn-lg btn-block" style="color: white; cursor:pointer" data-toggle="collapse" data-target="#reviewText"> Review Of Systems</a> <br />
                            <div id="reviewText" class=" collapse ">
                                <input type="checkbox" />HEENT:  <textarea class="form-control" rows="4" cols="60"></textarea>
                                <br />
                                <input type="checkbox" /> HEM/LYMPH: <input type="text" placeholder="Not Assessed" />
                            </div>
                        </div>
                        <br />
                        <div class="container ">
                            <a role="button" class="btn btn-primary btn-lg btn-block" style="color: white; cursor:pointer" data-toggle="collapse" data-target="#diagText" aria-expanded="false" aria-controls="diagText">Significant Diagnostics</a> <br />
                            <input type="text" id="diagText" class="form-control collapse " />
                        </div>
                        <br />
                        <div class="container">
                            <a role="button" class="btn btn-primary btn-lg btn-block" style="color: white; cursor:pointer" data-toggle="collapse" data-target="#assessmentText">Assessment</a> <br />
                            <input type="text" id="assessmentText" class="form-control collapse " />
                        </div>
                        <br />
                        <div class="container">
                            <a role="button" class="btn btn-primary btn-lg btn-block" style="color: white; cursor:pointer" data-toggle="collapse" data-target="#planText">Plan</a> <br />
                            <input type="text" id="planText" class="form-control collapse" />
                        </div>

                        <br />

                        <div class="text-center form-group">
                            Authorizing Provider: <input type="text" name="name" value="" />
                            <br />
                            Co Signature <input type="text" />
                        </div>

                        <br />

                        <div class="float-left">
                            <a class="btn btn-primary" asp-controller="Patient" asp-action="Details" asp-route-id="@Model.Patient.Mrn"> Return To Patient</a>
                            <a class="btn btn-primary" asp-controller="Encounter" asp-action="ViewEncounter" asp-route-id="@ViewBag.EncounterId"> Return to Checked In Encounters </a>
                        </div>

                        <div class="float-right">


                            <button type="submit" class="btn btn-primary" formmethod="post" asp-action="AddPhysicianReport" asp-controller="Encounter"> SAVE AUTHENTICATE </button>
                            @* not functional as of now - add later - 4/20/21
                                <button class="btn btn-primary"> PRINT REPORT </button>*@
                        </div>
                    </div>
                </div>
                <hr />

            </div>

        </div>
    </div>
</form>