            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <button class="btn btn-link" data-toggle="collapse" data-target="#advancedDirectivesCollapse" aria-expanded="true" aria-controls="advancedDirectivesCollapse">
                        Advanced Directives
                    </button>
                </h5>
            </div>

            <div id="advancedDirectivesCollapse" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                <div class="card-body m-0 p-0">

                    <div class="btn-group-vertical btn-block">
                        @* This needs more *@
                        <a class="btn btn-primary" asp-controller="" asp-action="Index"> Advanced Directives Buttons</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" id="headingTwo">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#physicianDocumentsCollapse" aria-expanded="false" aria-controls="physicianDocumentsCollapse">
                        Physician Documents
                    </button>
                </h5>
            </div>
            <div id="physicianDocumentsCollapse" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                <div class="card-body m-0 p-0">
                    <div class="btn-group-vertical btn-block">
                        @* use the a tag to create the buttons to link *@
                        <a class="btn btn-primary" asp-controller="Encounter" asp-action="HistoryAndPhysical" asp-route-id="@Model.Encounter.EncounterId"> History & Physical</a>
                        <a class="btn btn-primary" asp-controller="Encounter" asp-action="ViewDischarge"> Discharge Documents</a>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Index"> Consultations</a>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Index"> Progress Notes</a>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Index"> Orders</a>
                    </div>
                </div>
