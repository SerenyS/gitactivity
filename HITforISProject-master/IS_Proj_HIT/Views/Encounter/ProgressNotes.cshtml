@model IS_Proj_HIT.ViewModels.ViewEncounterPageModel
@{
    ViewData["Title"] = "Progress Notes";
}
<partial name="PatientBannerPartial" model="ViewBag.Patient" /> 
<partial name="_EncounterMenu"/>
<div class="card">
    <div class="card-header bg-primary text-white">
        <h4>
            Progress Notes
         @if (User.IsInRole("Administrator") || User.IsInRole("Nursing Faculty") || User.IsInRole("HIT Faculty") || User.IsInRole("Registrar")){
             <a class="btn btn-info btn-sm float-right" asp-controller="Encounter" asp-action="AddProgressNotes" asp-route-id="@Model.Encounter.EncounterId">
                    Add New
             </a>
         }
        </h4>
    </div>

    <div class="card-body bg-light">
        <div class="container">
            <table class="table table-bordered table-primary">
                <thead>
                    <tr>
                        <th scope="col">View</th>
                        <th scope="col">Date/Time</th>
                        <th scope="col">Note Type</th>
                        <th scope="col">Author</th>
                        <th scope="col">CoSign</th>
                    </tr>    
                </thead>
                <tbody>
                    
                    @* Filler Data *@
                    @* <tr>
                        <td>
                            <button>View</button>
                        </td>
                        <td>4/27/2021</td>
                        <td>Physician Note</td>
                        <td>Dr. Apples</td>
                        <td>Dr. Banana</td>
                    </tr> *@
                    @{
                        var counter = 0;
                    }
                    @foreach (var ProgressNote in ViewBag.ProgressNotes){
                        <tr @(counter++)>
                            <td>
                                <button>View</button>
                            </td>
                            <td>@ProgressNote.LastUpdated</td>
                            <td>@ProgressNote.NoteType</td>
                            <td>@ProgressNote.Physician</td>
                            <td>@ProgressNote.CoPhysician</td>
                        </tr>
                    }
                    @if (counter == 0) {
                        <tr class="red">
                            <td>No progress notes available</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>
