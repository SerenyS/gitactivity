@using IS_Proj_HIT.Models.ViewModels
@model IEnumerable<IS_Proj_HIT.ViewModels.EncounterPatientViewModel>
@{
    ViewData["Title"] = "Encounter List";
}

<div class="row my-3">
    <div class="col-sm-3">
        @if (ViewBag.Filter == "CheckedIn")
        {
            <a asp-action="Index"
               class="btn btn-outline-primary">
                View <b>All</b> Encounters
            </a>
        }
        else
        {
            <a asp-action="Index"
               asp-route-filter="CheckedIn"
               class="btn btn-outline-primary">
                Filter Only <b>Checked In</b> Encounters
            </a>
        }
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">MRN</th>
                <th scope="col">Name</th>
                <th scope="col">Admit Time</th>
                <th scope="col">Facility</th>
                @if (ViewBag.Filter == "CheckedIn")
                {
                    <th scope="col">Room Number</th>
                }
                else
                {
                    <th scope="col">Discharge Date</th>
                }
                <th scope="col">View Encounter Details</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var encounter in Model)
            {
                <tr>
                    <td>@encounter.Mrn</td>
                    <td>@encounter.FirstName @encounter.LastName</td>
                    <td>@encounter.AdmitDateTime</td>
                    <td>@encounter.FacilityName</td>
                    @if (ViewBag.Filter == "CheckedIn")
                    {
                        <td>@encounter.RoomNumber</td>
                    }
                    else
                    {
                        <td>@(string.IsNullOrWhiteSpace(encounter.DischargeDateTime) ? "Checked In" : encounter.DischargeDateTime)</td>
                    }
                    <td id="special">
                        <a asp-action="ViewEncounter"
                           asp-route-encounterId="@encounter.EncounterId"
                           asp-route-isPatientEncounter="false"
                           class="btn btn-outline-primary">
                            View
                        </a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Administrator"))
                            {
                                <a asp-action="DeleteEncounter"
                                   asp-route-encounterId="@encounter.EncounterId"
                                   onclick="if (!confirm('Are you sure you want to delete this encounter?')) return false;" class="btn btn-danger">
                                    Delete
                                </a>
                            }
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>