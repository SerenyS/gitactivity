@model IS_Proj_HIT.ViewModels.ViewEncounterPageModel

<div class="card col-2 mx-0 px-0 float-left"> 
<div class="card-header bg-primary text-white">
  <h4>
      Encounter Menu
  </h4>
  <a asp-controller="Encounter"
  asp-action="ViewEncounter"
  asp-route-encounterId="@Model.Encounter.EncounterId" 
  class="text-white">
      <small>Return to Encounter</small>
  </a>
</div>


<div id="accordion" class="accordion accordion-flush mx-0 px-0">
  <div class="card">
    <div class="card-header" id="headingOne">
      <h5 class="mb-0">
        <button class="btn btn-link" data-toggle="collapse" data-target="#advancedDirectivesCollapse" aria-expanded="false" aria-controls="advancedDirectivesCollapse">
          Advanced Directives
        </button>
      </h5>
    </div>

    <div id="advancedDirectivesCollapse" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
      <div class="card-body m-0 p-0">
        
        <div class="btn-group-vertical btn-block">
          @* This needs more *@
          <a class="btn disabled"> Advanced Directives Buttons</a>
        </div>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-header" id="headingTwo">
      <h5 class="mb-0">
        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#physicianDocumentsCollapse" aria-expanded="false" aria-controls="physicianDocumentsCollapse">
          Physician Documents
        </button>
      </h5>
    </div>
    <div id="physicianDocumentsCollapse" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
      <div class="card-body m-0 p-0">
        <div class="btn-group-vertical btn-block">
          @* use the a tag to create the buttons to link *@
          <a class="btn btn-primary" asp-controller="Encounter" asp-action="HistoryAndPhysical" asp-route-id="@Model.Encounter.EncounterId"> History & Physical</a>
          <a class="btn btn-primary" asp-controller="Encounter" asp-action="ProgressNotes" asp-route-id="@Model.Encounter.EncounterId"> Progress Notes</a>
          <a class="btn disabled" asp-controller="Encounter" asp-action="ViewDischarge"> Discharge Documents</a>
          <a class="btn disabled" asp-controller="Home" asp-action="Index"> Consultations</a>
          <a class="btn disabled" asp-controller="Home" asp-action="Index"> Orders</a>
        </div>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-header" id="headingThree">
      <h5 class="mb-0">
        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#proceduresCollapse" aria-expanded="false" aria-controls="proceduresCollapse">
          Procedures
        </button>
      </h5>
    </div>
    <div id="proceduresCollapse" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
      <div class="card-body m-0 p-0">
        
        <div class="btn-group-vertical btn-block">
          @* This needs more *@
          <a class="btn disabled"> Procedures Buttons</a>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header" id="headingThree">
      <h5 class="mb-0">
        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#labDiagnosticsCollapse" aria-expanded="false" aria-controls="labDiagnosticsCollapse">
          Lab & Diagnostics
        </button>
      </h5>
    </div>
    <div id="labDiagnosticsCollapse" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
      <div class="card-body m-0 p-0">
        
        <div class="btn-group-vertical btn-block">
          @* This needs more *@
          <a class="btn disabled"> Lab & Diagnostics Buttons</a>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header" id="headingThree">
      <h5 class="mb-0">
        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#nursingCollapse" aria-expanded="false" aria-controls="nursingCollapse">
          Nursing
        </button>
      </h5>
    </div>
    <div id="nursingCollapse" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
      <div class="card-body m-0 p-0">
        
        <div class="btn-group-vertical btn-block">
          @* This needs more *@
          <a class="btn btn-primary" asp-controller="Encounter" asp-action="PCAIndex" asp-route-encounterId="@Model.Encounter.EncounterId"> Patient Care Assessments</a>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header" id="headingThree">
      <h5 class="mb-0">
        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#emarCollapse" aria-expanded="false" aria-controls="emarCollapse">
          eMAR
        </button>
      </h5>
    </div>
    <div id="emarCollapse" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
      <div class="card-body m-0 p-0">
        
        <div class="btn-group-vertical btn-block">
          @* This needs more *@
          <a class="btn disabled"> eMAR Buttons</a>
        </div>
      </div>
    </div>
  </div>

  
</div>
</div>