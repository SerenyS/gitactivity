@{
    ViewBag.Title = "Administration";
}

<h1>Administration Tools</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <a asp-action="ViewRoles" class="btn btn-outline-primary">
                        <h5 class="card-title mb-0">Security Roles</h5>
                    </a>
                </div>
                <div class="card-footer">
                    <p class="mb-0">Management pages for security roles</p>
                </div>
            </div>
        </div>
        <div class="col-sm-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <a asp-action="DataEntry" class="btn btn-outline-primary">
                        <h5 class="card-title mb-0">Data Entry Management</h5>
                    </a>
                </div>
                <div class="card-footer">
                    <p class="mb-0">CRUD pages for managed database tables</p>
                </div>
            </div>
        </div>
    </div>
</div>