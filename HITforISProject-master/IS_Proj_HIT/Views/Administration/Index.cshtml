@{
    ViewBag.Title = "Administration";
}

<h1>Administration Tools</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <a asp-action="ViewRoles" class="btn btn-outline-primary">
                        <h5 class="card-title mb-0">Security Roles</h5>
                    </a>
                </div>
                <div class="card-footer">
                    <p class="mb-0">Management pages for security roles</p>
                </div>
            </div>
        </div>
        @if (User.IsInRole("Administrator"))
        {
            <div class="col-sm-3 mb-3">
                <div class="card">
                    <div class="card-body">
                        <a asp-action="DataEntry" class="btn btn-outline-primary">
                            <h5 class="card-title mb-0">PCA Structured Data</h5>
                        </a>
                    </div>
                    <div class="card-footer">
                        <p class="mb-0">Management pages for PCA structured data/lookup tables</p>
                    </div>
                </div>
            </div>
        }
        @if (User.IsInRole("Administrator"))
        {
            <div class="col-sm-3 mb-3">
                <div class="card">
                    <div class="card-body">
                        <a asp-action="EncounterDataEntry" class="btn btn-outline-primary">
                            <h5 class="card-title mb-0">Encounter Structured Data</h5>
                        </a>
                    </div>
                    <div class="card-footer">
                        <p class="mb-0">Management pages for Encounter structured data/lookup tables</p>
                    </div>
                </div>
            </div>
        }
        @if (User.IsInRole("Administrator"))
        {
            <div class="col-sm-3 mb-3">
                <div class="card">
                    <div class="card-body">
                        <a asp-action="PhysicianDataEntry" class="btn btn-outline-primary">
                            <h5 class="card-title mb-0">Physician Structured Data</h5>
                        </a>
                    </div>
                    <div class="card-footer">
                        <p class="mb-0">Management pages for Physician structured data/lookup tables</p>
                    </div>
                </div>
            </div>
        }
        @if (User.IsInRole("Administrator"))
        {
            <div class="col-sm-3 mb-3">
                <div class="card">
                    <div class="card-body">
                        <a asp-action="ViewUsers" class="btn btn-outline-primary">
                            <h5 class="card-title mb-0">View Users</h5>
                        </a>
                    </div>
                    <div class="card-footer">
                        <p class="mb-0">List the Users in the UserTable. </p>
                    </div>
                </div>
            </div>
        }
        @if (User.IsInRole("Administrator"))
        {
            <div class="col-sm-3 mb-3">
                <div class="card">
                    <div class="card-body">
                        <a asp-action="ListUsers" class="btn btn-outline-primary">
                            <h5 class="card-title mb-0">List Users</h5>
                        </a>
                    </div>
                    <div class="card-footer">
                        <p class="mb-0">List All Users in the Database.</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>