@model IS_Proj_HIT.Models.UserTable
@{
    ViewData["Title"] = "Profile";
}

<div class="row my-3">
    <div class="col-12">
        <h3>Edit Profile</h3>
    </div>
</div>

<form method="post" asp-action="EditRegisterDetails">
    <div class="container text-danger" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="@Model.UserId" />
    <div class="row">
        <div class="col-sm-4">
            <label for="FirstName">First Name: </label><br />
            <input class="form-control" asp-for="@Model.FirstName" name="FirstName" id="FirstName" placeholder="First Name" />
        </div>
        <div class="col-sm-4">
            <label for="LastName">Last Name: </label><br />
            <input class="form-control" asp-for="@Model.LastName" name="lastName" id="LastName" placeholder="Last Name" />
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-sm-4">
            <label for="Instructor">Instructor: </label><br />
            <select class="form-control dropdowns" id="Instructor" asp-for="@Model.InstructorId" asp-items="ViewBag.InstructorList"></select>
        </div>
        <div class="col-sm-4">
            <label for="Programs">Program Enrolled In:</label><br />
            <select class="form-control dropdowns" id="Programs" asp-for="@Model.ProgramEnrolledIn" asp-items="ViewBag.ProgramList"></select>
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-sm-4">
            <label for="StartDate">Class Start Date</label><br />
            <input asp-for="@Model.StartDate" type="date" class="form-control startDate" id="StartDate" />
        </div>
        <div class="col-sm-4">
            <label for="EndDate">Class End Date</label><br />
            <input asp-for="@Model.EndDate" type="date" class="form-control endDate" id="EndDate" />
        </div>
    </div>

    <br />
    <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
</form>