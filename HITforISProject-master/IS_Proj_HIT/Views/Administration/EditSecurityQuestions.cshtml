@model IS_Proj_HIT.ViewModels.EditUserSecurityQuestionsViewModel

@{
    ViewData["Title"] = "Edit Security Questions";
}

<h1>Edit Security Questions</h1>

<div class="row">
    <div class="col-md-5">
        <form asp-action="EditSecurityQuestions" method="post">
            <div class="form-group">
                <label for="question1" asp-for="@Model.SecurityQuestionId1">Security Question 1</label>
                <select class="custom-select mr-sm-2" id="question1" asp-for="@Model.SecurityQuestionId1" asp-items="@ViewBag.QuestionList">
                </select>
            </div>
            <div class="form-group">
                <label for="question1Answer" asp-for="@Model.AnswerHash1"></label>
                <input type="text" class="form-control" placeholder="answer" id="question1Answer" asp-for="@Model.AnswerHash1"/>
            </div>
            <div class="form-group">
                <label for="question2" asp-for="@Model.SecurityQuestionId2">Security Question 2</label>
                <select class="custom-select mr-sm-2" id="question2" asp-for="@Model.SecurityQuestionId2" asp-items="@ViewBag.QuestionList">
                </select>
            </div>
            <div class="form-group">
                <label for="question2Answer" asp-for="@Model.AnswerHash2"></label>
                <input type="text" class="form-control" placeholder="answer" id="question2Answer" asp-for="@Model.AnswerHash2"/>
            </div>
            <div class="form-group">
                <label for="question3" asp-for="@Model.SecurityQuestionId3">Security Question 3</label>
                <select class="custom-select mr-sm-2" id="question3" asp-for="@Model.SecurityQuestionId3" asp-items="@ViewBag.QuestionList">
                </select>
            </div>
            <div class="form-group">
                <label for="question3Answer" asp-for="@Model.AnswerHash3"></label>
                <input type="text" class="form-control" placeholder="answer" id="question3Answer" asp-for="@Model.AnswerHash3"/>
            </div>
            <div class="form-group">
                <button type="submit">Confirm</button>
                @* <button type="reset">Reset</button> *@
            </div>
        </form>
        </div>
</div>