@page
@model IS_Proj_HIT.Areas.Identity.Pages.Account.SecurityQuestionsModel

@{
    ViewData["Title"] = "Security Questions";
}

<h1>
    @ViewData["Title"]
</h1>
<div class="row">
    <div class="col-md-5">
        <form method="post">
            <div class="form-group">
                <label for="question1" asp-for="Input.SecurityQuestion1Answer">Question One</label>
                <select class="custom-select mr-sm-2" asp-items="Model.Questions" id="question1" asp-for="Input.SecurityQuestion1"></select>
            </div>
            <div class="form-group">
                <label for="question1Answer" asp-for="Input.SecurityQuestion1Answer"></label>
                <input type="text" class="form-control" placeholder="Answer" id="question1Answer" asp-for="Input.SecurityQuestion1Answer" />
            </div>
            <div class="form-group">
                <label for="question2">Question Two</label>
                <select class="custom-select mr-sm-2" asp-items="Model.Questions" id="question2" asp-for="Input.SecurityQuestion2"></select>
            </div>
            <div class="form-group">
                <label for="question2Answer" asp-for="Input.SecurityQuestion2Answer"></label>
                <input type="text" class="form-control" placeholder="Answer" id="question2Answer" asp-for="Input.SecurityQuestion2Answer" />
            </div>
            <div class="form-group">
                <label for="question3">Question Three</label>
                <select class="custom-select mr-sm-2" asp-items="Model.Questions" id="question3" asp-for="Input.SecurityQuestion3"></select>
            </div>
            <div class="form-group">
                <label for="question3Answer" asp-for="Input.SecurityQuestion3Answer"></label>
                <input type="text" class="form-control" placeholder="Answer" id="question3Answer" asp-for="Input.SecurityQuestion3Answer" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Confirm</button>
                <button type="reset" class="btn btn-primary">Reset</button>
            </div>
        </form>
        </div>
</div>